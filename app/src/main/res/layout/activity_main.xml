<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="Muskan Verma"
        android:textSize="45dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:padding="5dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/profession"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="Currently Pursuing B.Tech"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="@id/Name"
        app:layout_constraintStart_toStartOf="@id/Name"
        app:layout_constraintTop_toBottomOf="@id/Name"
        />

    <TextView
        android:id="@+id/SocialAccounts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="Social Accounts -"
        android:textColor="@color/black"
        android:textSize="29dp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="@id/profession"
        app:layout_constraintStart_toStartOf="@id/profession"
        app:layout_constraintTop_toBottomOf="@id/profession"
        />

    <ImageButton
        android:id="@+id/linkDin"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="#C9FAF0"
        android:scaleType="fitCenter"
        android:src="@drawable/linkdin"
        app:layout_constraintEnd_toEndOf="@+id/SocialAccounts"
        app:layout_constraintStart_toStartOf="@id/SocialAccounts"
        app:layout_constraintTop_toBottomOf="@id/SocialAccounts"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/github"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/github"
        android:scaleType="fitCenter"
        android:backgroundTint="#C9FAF0"
        app:layout_constraintEnd_toEndOf="@+id/linkDin"
        app:layout_constraintStart_toStartOf="@id/linkDin"
        app:layout_constraintTop_toBottomOf="@id/linkDin"/>

    <ImageButton
        android:id="@+id/youtube"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/youtube"
        android:scaleType="fitCenter"
        android:backgroundTint="#C9FAF0"
        app:layout_constraintEnd_toEndOf="@+id/github"
        app:layout_constraintStart_toStartOf="@id/github"
        app:layout_constraintTop_toBottomOf="@id/github"/>

</androidx.constraintlayout.widget.ConstraintLayout>